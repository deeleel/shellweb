#!/bin/ksh 
#check for 404 response

. ${0%/*}/common

path="/nonexistent"

run_shellweb

check="HTTP/1.0 404 Not found"
response=$(printf "GET $path HTTP/1.0\r\n\r\n" | \
	 $nc -w 5 127.0.0.1 $port | head -n 1 | tr -d '\r')
test x"$response" = x"$check" || fail "expected: '$check'; got: '$response'"
